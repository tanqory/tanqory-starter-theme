</style>

<script>
(function() {
  const section = document.querySelector('[data-section-type="collection-products"][data-section-id="${section.id}"]');
  if (!section) return;

  // Filter toggle (mobile)
  const filterToggle = section.querySelector('[data-filter-toggle]');
  const sidebar = section.querySelector('.collection-sidebar');

  if (filterToggle && sidebar) {
    filterToggle.addEventListener('click', () => {
      sidebar.classList.toggle('open');
    });

    sidebar.addEventListener('click', (e) => {
      if (e.target === sidebar) {
        sidebar.classList.remove('open');
      }
    });
  }

  // Filter group collapse
  const filterHeaders = section.querySelectorAll('.filter-group-header');
  filterHeaders.forEach(header => {
    header.addEventListener('click', () => {
      const group = header.closest('.filter-group');
      group.classList.toggle('collapsed');
      header.setAttribute('aria-expanded', !group.classList.contains('collapsed'));
    });
  });

  // Layout toggle
  const layoutBtns = section.querySelectorAll('.layout-btn');
  const productsGrid = section.querySelector('[data-products-grid]');

  layoutBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      layoutBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      // TODO: Implement list view
    });
  });
})();
</script>
